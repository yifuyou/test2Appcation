<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:orientation="horizontal">

        <com.base.common.view.date.view.YearPicker
            android:id="@+id/yearPicker_layout_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:halfVisibleItemCount="2"
            app:wheelCurtainBorder="false" />

        <com.base.common.view.date.view.MonthPicker
            android:id="@+id/monthPicker_layout_date"
            android:layout_width="0dp"
            app:wheelCyclic="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:halfVisibleItemCount="2"
            app:wheelCurtainBorder="false" />

        <com.base.common.view.date.view.DayPicker
            android:id="@+id/dayPicker_layout_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:wheelCyclic="true"
            android:layout_weight="1"
            app:halfVisibleItemCount="2"
            app:wheelCurtainBorder="false" />

    </LinearLayout>
</layout>