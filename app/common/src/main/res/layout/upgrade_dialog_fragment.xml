<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="beta_title"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="beta_upgrade_info"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="beta_cancel_button"
                android:visibility="gone" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_update_title" />

            <com.base.common.view.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:rv_backgroundColor="@color/C_FFFFFF"
                app:rv_cornerRadius_BL="@dimen/dp_3"
                app:rv_cornerRadius_BR="@dimen/dp_3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/versions_new"
                    android:textColor="@color/textColor_333333"
                    android:textSize="@dimen/font_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:lineSpacingMultiplier="1.2"
                    android:tag="beta_upgrade_feature"
                    android:text="1,111111111111111111111111\n2,222222222222222222\n3,sdfsdfs"
                    android:textColor="@color/C_666666" />

                <com.base.common.view.roundview.RoundTextView
                    android:id="@+id/bt_ok"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    android:gravity="center"
                    android:tag="beta_confirm_button"
                    android:text="@string/upgrade_now"
                    android:textColor="@color/C_FFFFFF"
                    android:textSize="@dimen/font_18"
                    app:rv_backgroundColor="#659CFF"
                    app:rv_cornerRadius="@dimen/dp_6" />

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/dp_10"
                    android:text="@string/download_later"
                    android:textColor="@color/textColor_666666"
                    android:textSize="@dimen/font_12" />
            </com.base.common.view.roundview.RoundLinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>